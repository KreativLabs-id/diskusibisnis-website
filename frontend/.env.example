# Frontend Environment Variables
# Copy this file to .env.local and fill in your values
# Frontend Next.js app connects to Backend Express API

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Frontend Configuration
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Supabase Configuration (for client-side features like Storage, Realtime)
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Production URLs (for deployment)
# NEXT_PUBLIC_API_URL=https://your-backend-api.com/api
# NEXT_PUBLIC_FRONTEND_URL=https://your-app.vercel.app

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Optional: Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# Google OAuth Configuration
# Get this from: Google Cloud Console > APIs & Services > Credentials > OAuth 2.0 Client IDs
# This must be the SAME Client ID as used in the backend
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
